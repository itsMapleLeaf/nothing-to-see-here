service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }

    match /characters/{characterId} {
      allow read;

      allow create:
        if request.auth != null;

      allow update, delete:
        if request.auth != null && resource.data.owner == request.auth.uid;
    }
  }
}
