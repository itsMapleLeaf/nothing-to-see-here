    "mobx-react": "^5.0.0",
    "neo4j-driver": "^1.5.3",
    "polished": "^1.9.2",
    "prop-types": "^15.6.1",
    "react": "^16.3.0",
    "react-dom": "^16.3.0",
    "react-emotion": "^9.1.0",
    "react-router-dom": "^4.2.2",
    "sanitize.css": "^5.0.0",
    "secure-password": "^3.0.0"
  },
